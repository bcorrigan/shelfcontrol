@use opds::NavEntry
@(navEntries: @[NavEntry])

@for nav in navEntries {
<entry>
    <title>@nav.title</title>
    <id>@nav.url</id>
    <content type="text"></content>
    <link type="application/atom+xml;profile=opds-catalog;kind=navigation" href="@nav.url"/>
    @if !nav.icon.is_empty() { <link href="@nav.icon" type="image/png" rel="http://opds-spec.org/image/thumbnail"/> }
    <updated>@nav.updated</updated>
</entry>
}